name: Division Athlete Scraper
on:
  schedule:
    - cron: '0 2 * * 0'  # Weekly on Sunday at 2 AM
  workflow_dispatch:     # Manual trigger

jobs:
  scrape:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: actions/setup-node@v3
        with:
          node-version: '18'
      - run: npm install
      - run: node division-scraper.js
      - run: node nightly-division-scraper.js
      - uses: actions/upload-artifact@v3
        with:
          name: athlete-data
          path: output/